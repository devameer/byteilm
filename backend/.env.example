APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=https://plan.devameer.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
# FILESYSTEM_DISK=local  # Use 'local' for local storage
FILESYSTEM_DISK=s3       # Use 's3' for Amazon S3 storage
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=plan_cache_

MEMCACHED_HOST=127.0.0.1

# Redis Configuration (Optional - Disabled by default)
# Uncomment and configure if you want to use Redis for caching
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_CACHE_DB=1

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Amazon S3 Configuration (for video storage)
# To use S3, set FILESYSTEM_DISK=s3 and fill in your AWS credentials below
# Required:
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=your_bucket_name_here

# Optional (auto-generated from bucket + region if not set):
# AWS_URL=https://your_bucket_name_here.s3.eu-central-1.amazonaws.com

# Optional (for custom S3-compatible services like DigitalOcean Spaces):
# AWS_ENDPOINT=https://fra1.digitaloceanspaces.com
# AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL="${APP_URL}/api/telegram/webhook"
TELEGRAM_WEBHOOK_SECRET=your_random_secret_here

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Stripe Payment Configuration
STRIPE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
